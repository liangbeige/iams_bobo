<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iams.manage.mapper.MetadataMapper">

    <resultMap type="Metadata" id="MetadataResult" autoMapping="false">
        <result property="id"           column="id"           />
        <result property="name"         column="name"         />
        <result property="code"         column="code"         />
        <result property="keywords"     column="keywords"     />
    </resultMap>

    <sql id="selectMetadataVo">
        select id, name, code, keywords
        from tb_metadata
    </sql>

    <select id="selectMetadataList" parameterType="Metadata" resultMap="MetadataResult">
        <include refid="selectMetadataVo"/>
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="code != null and code != ''">
                AND code LIKE CONCAT('%', #{code}, '%')
            </if>
            <if test="keywords != null and keywords != ''">
                AND keywords LIKE CONCAT('%', #{keywords}, '%')
            </if>
        </where>
        ORDER BY id
    </select>

    <select id="selectMetadataByCode" parameterType="String" resultMap="MetadataResult">
        <include refid="selectMetadataVo"/>
        WHERE code = #{code} LIMIT 1
    </select>

    <select id="selectMetadataByIds" resultMap="MetadataResult">
        <include refid="selectMetadataVo"/>
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="selectMetadataById" parameterType="Integer" resultMap="MetadataResult">
        <include refid="selectMetadataVo"/>
        WHERE id = #{id}
    </select>

    <insert id="insertMetadata" parameterType="Metadata" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_metadata
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="code != null and code != ''">code,</if>
            <if test="keywords != null">keywords,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="code != null and code != ''">#{code},</if>
            <if test="keywords != null">#{keywords},</if>
        </trim>
    </insert>

    <update id="updateMetadata" parameterType="Metadata">
        UPDATE tb_metadata
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="code != null and code != ''">code = #{code},</if>
            <if test="keywords != null">keywords = #{keywords},</if>
        </trim>
        WHERE id = #{id}
    </update>

    <delete id="deleteMetadataById" parameterType="Integer">
        DELETE FROM tb_metadata WHERE id = #{id}
    </delete>

    <delete id="deleteMetadataBatchIds" parameterType="String">
        DELETE FROM tb_metadata WHERE id IN
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>