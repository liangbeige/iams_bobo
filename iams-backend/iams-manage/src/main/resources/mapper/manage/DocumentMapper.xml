<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iams.manage.mapper.DocumentMapper">
    
    <resultMap type="Document" id="DocumentResult">
        <result property="id"    column="id"    />
        <result property="archiveId"    column="archive_id"    />
        <result property="directory"    column="directory"    />
        <result property="xuhao"    column="xuhao"    />
        <result property="name"    column="name"    />
        <result property="fileType"    column="file_type"    />
        <result property="fileSize"    column="file_size"    />
        <result property="filePath"    column="file_path"    />
        <result property="fileLocation"    column="file_location"    />
        <result property="content"    column="content"    />
        <result property="authenticity"    column="authenticity"    />
        <result property="integrity"    column="integrity"    />
        <result property="availability"    column="availability"    />
        <result property="security"    column="security"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="remark"    column="remark"    />
        <result property="extraInfo"    column="extra_info"    />
        <result property="categoryCode"    column="category_code"    />
        <result property="minioName"    column="minio_name"    />
        <result property="projectId"    column="project_id"    />
        <result property="metadataIds"    column="metadata_ids"    />
        <result property="title"    column="title"    />
        <result property="number"    column="number"    />
        <result property="unit"    column="unit"    />
    </resultMap>

    <sql id="selectDocumentVo">
        select id, archive_id, directory, xuhao, name, file_type, file_size,
               file_path, file_location, content, authenticity, integrity,
               availability, security, create_time, create_by, update_time,
               update_by, remark, extra_info, category_code, minio_name,
               project_id, metadata_ids, title, number, unit from tb_document
    </sql>

    <!-- 1. 修改 XML 文件中的 selectDocumentList 方法 -->
    <select id="selectDocumentList" parameterType="Document" resultMap="DocumentResult">
        <include refid="selectDocumentVo"/>
        <where>
            <if test="archiveId != null "> and archive_id = #{archiveId}</if>
            <if test="projectId != null "> and project_id = #{projectId}</if>
            <if test="archivedanghao != null and archivedanghao != ''">
             AND archive_id IN (select id from tb_archive where danghao like concat('%', #{archivedanghao}, '%') )
            </if>
            <if test="directory != null  and directory != ''"> and directory = #{directory}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="createBy != null  and createBy != ''"> and create_by like concat('%', #{createBy}, '%')</if>
            <if test="fileType != null  and fileType != ''"> and file_type = #{fileType}</if>
            <if test="categoryCode != null and categoryCode != ''">
                AND (
                category_code = #{categoryCode}
                OR category_code LIKE CONCAT(#{categoryCode}, ',%')
                OR category_code LIKE CONCAT('%,', #{categoryCode})
                OR category_code LIKE CONCAT('%,', #{categoryCode}, ',%')
                )
            </if>
            <if test="content != null  and content != ''"> and content like concat('%', #{content}, '%')</if>
            <if test="createBy != null  and createBy != ''"> and create_by like concat('%', #{createBy}, '%')</if>
        </where>

        <!-- 动态排序逻辑 -->
        <choose>
            <!-- 按门类挂接状态排序 -->
            <when test="orderByColumn != null and orderByColumn == 'categoryCode'">
                <choose>
                    <when test="isAsc != null and isAsc == 'asc'">
                        <!-- 升序：未挂接(NULL)在前，已挂接在后，同状态内按category_code排序 -->
                        ORDER BY
                        CASE WHEN category_code IS NULL OR category_code = '' THEN 0 ELSE 1 END ASC,
                        category_code ASC,
                        name ASC
                    </when>
                    <when test="isAsc != null and isAsc == 'desc'">
                        <!-- 降序：已挂接在前，未挂接(NULL)在后，同状态内按category_code倒序 -->
                        ORDER BY
                        CASE WHEN category_code IS NULL OR category_code = '' THEN 1 ELSE 0 END ASC,
                        category_code DESC,
                        name ASC
                    </when>
                    <otherwise>
                        <!-- 默认排序 -->
                        ORDER BY category_code, name ASC
                    </otherwise>
                </choose>
            </when>
            <!-- 默认排序 -->
            <otherwise>
                ORDER BY category_code, name ASC
            </otherwise>
        </choose>
    </select>

    <select id="selectDocumentListByIds" parameterType="String" resultMap="DocumentResult">
        <include refid="selectDocumentVo"/>
        WHERE id IN
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="selectDocumentById" parameterType="Long" resultMap="DocumentResult">
        <include refid="selectDocumentVo"/>
        where id = #{id}
    </select>

    <insert id="insertDocument" parameterType="Document" useGeneratedKeys="true" keyProperty="id">
        insert into tb_document
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="archiveId != null">archive_id,</if>
            <if test="projectId != null">project_id,</if>
            <if test="directory != null and directory != ''">directory,</if>
            <if test="xuhao != null">xuhao,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="fileType != null">file_type,</if>
            <if test="fileSize != null">file_size,</if>
            <if test="filePath != null">file_path,</if>
            <if test="fileLocation != null">file_location,</if>
            <if test="content != null">content,</if>
            <if test="authenticity != null">authenticity,</if>
            <if test="integrity != null">integrity,</if>
            <if test="availability != null">availability,</if>
            <if test="security != null">security,</if>
            <if test="createTime != null">create_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="remark != null">remark,</if>
            <if test="extraInfo != null">extra_info,</if>
            <if test="categoryCode != null">category_code,</if>
            <if test="minioName != null">minio_name,</if>
            <if test="metadataIds != null">metadata_ids,</if>
            <if test="title != null">title,</if>
            <if test="number != null">number,</if>
            <if test="unit != null">unit,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="archiveId != null">#{archiveId},</if>
            <if test="projectId != null">#{projectId},</if>
            <if test="directory != null and directory != ''">#{directory},</if>
            <if test="xuhao != null">#{xuhao},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="fileType != null">#{fileType},</if>
            <if test="fileSize != null">#{fileSize},</if>
            <if test="filePath != null">#{filePath},</if>
            <if test="fileLocation != null">#{fileLocation},</if>
            <if test="content != null">#{content},</if>
            <if test="authenticity != null">#{authenticity},</if>
            <if test="integrity != null">#{integrity},</if>
            <if test="availability != null">#{availability},</if>
            <if test="security != null">#{security},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="remark != null">#{remark},</if>
            <if test="extraInfo != null">#{extraInfo},</if>
            <if test="categoryCode != null">#{categoryCode},</if>
            <if test="minioName != null">#{minioName},</if>
            <if test="metadataIds != null">#{metadataIds},</if>
            <if test="title != null">#{title},</if>
            <if test="number != null">#{number},</if>
            <if test="unit != null">#{unit},</if>
         </trim>
    </insert>

    <update id="updateDocument" parameterType="Document">
        update tb_document
        <trim prefix="SET" suffixOverrides=",">
            <if test="archiveId != null">archive_id = #{archiveId},</if>
            <if test="projectId != null">project_id = #{projectId},</if>
            <if test="directory != null and directory != ''">directory = #{directory},</if>
            <if test="xuhao != null">xuhao = #{xuhao},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="fileType != null">file_type = #{fileType},</if>
            <if test="fileSize != null">file_size = #{fileSize},</if>
            <if test="filePath != null">file_path = #{filePath},</if>
            <if test="fileLocation != null">file_location = #{fileLocation},</if>
            <if test="content != null">content = #{content},</if>
            <if test="authenticity != null">authenticity = #{authenticity},</if>
            <if test="integrity != null">integrity = #{integrity},</if>
            <if test="availability != null">availability = #{availability},</if>
            <if test="security != null">security = #{security},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="extraInfo != null">extra_info = #{extraInfo},</if>
            <if test="categoryCode != null">category_code = #{categoryCode},</if>
            <if test="metadataIds != null">metadata_ids = #{metadataIds},</if>
            <if test="title != null">title = #{title},</if>
            <if test="number != null">number = #{number},</if>
            <if test="unit != null">unit = #{unit},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDocumentById" parameterType="Long">
        delete from tb_document where id = #{id}
    </delete>

    <delete id="deleteDocumentByIds" parameterType="String">
        delete from tb_document where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectMaxXuhaoByArchiveId" parameterType="long" resultType="Long">
        SELECT MAX(xuhao) AS max_xuhao
        FROM tb_document
        WHERE archive_id = #{archiveId}
    </select>

    <update id="updateDocExtraInfo" parameterType="ExtraInfo">
        UPDATE tb_document
        SET extra_info = #{extraInfo}
        WHERE id = #{id};
    </update>

    <update id="batchUpdateCategory">
        update tb_document
        set category_code = #{categoryCode}
        where id in
        <foreach collection="docIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <select id="selectListByArchiveId" parameterType="Long" resultType="Document">
        SELECT *
        FROM tb_document
        <where>
            <if test="archiveId != null">
                AND archive_id = #{archiveId}
            </if>
        </where>
    </select>

    <select id="selectDocumentByArchiveIdAndName" parameterType="map" resultType="Document">
        SELECT *
        FROM tb_document
        WHERE archive_id = #{archiveId} AND name = #{name}
    </select>

    <select id="selectMinioNameList" resultMap="DocumentResult">
        <include refid="selectDocumentVo"/>
        WHERE content IS NULL OR content = ''
    </select>

    <select id="selectOcredDocumentList" parameterType="Document" resultMap="DocumentResult">
        <include refid="selectDocumentVo"/>
        WHERE content IS NOT NULL AND create_by = #{createBy}
    </select>

    <select id="selectNoOcrDocumentList" parameterType="Document" resultMap="DocumentResult">
        <include refid="selectDocumentVo"/>
        WHERE content IS NULL AND create_by = #{createBy}
    </select>

    <select id="selectByProjectId" parameterType="Long" resultMap="DocumentResult">
        <include refid="selectDocumentVo"/>
        WHERE project_id = #{projectId}
    </select>

    <delete id="deleteDocumentByArchiveId" parameterType="Long">
        delete from tb_document where archive_id = #{archiveId}
    </delete>

</mapper>